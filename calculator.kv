<CalculatorLayout>:
    orientation: "vertical"
    padding: 20
    spacing: 20

    TextInput:
        id: num1
        hint_text: "Número 1"
        font_size: 32
        size_hint_y: None
        height: 80
        multiline: False

    TextInput:
        id: num2
        hint_text: "Número 2"
        font_size: 32
        size_hint_y: None
        height: 80
        multiline: False

    BoxLayout:
        size_hint_y: None
        height: 80
        spacing: 10

        Button:
            text: "+"
            font_size: 32
            on_release: root.calculate('+')

        Button:
            text: "-"
            font_size: 32
            on_release: root.calculate('-')

        Button:
            text: "*"
            font_size: 32
            on_release: root.calculate('*')

        Button:
            text: "/"
            font_size: 32
            on_release: root.calculate('/')

    Label:
        id: result
        text: "Resultado"
        font_size: 40
        size_hint_y: None
        height: 80
