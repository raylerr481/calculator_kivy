<CalcLayout>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    TextInput:
        id: input
        font_size: 40
        halign: "right"
        size_hint_y: 0.2

    GridLayout:
        cols: 4
        spacing: 10
        size_hint_y: 0.8

        Button:
            text: "7"
            on_release: root.press_button(self.text)
        Button:
            text: "8"
            on_release: root.press_button(self.text)
        Button:
            text: "9"
            on_release: root.press_button(self.text)
        Button:
            text: "/"
            on_release: root.press_button(self.text)

        Button:
            text: "4"
            on_release: root.press_button(self.text)
        Button:
            text: "5"
            on_release: root.press_button(self.text)
        Button:
            text: "6"
            on_release: root.press_button(self.text)
        Button:
            text: "*"
            on_release: root.press_button(self.text)

        Button:
            text: "1"
            on_release: root.press_button(self.text)
        Button:
            text: "2"
            on_release: root.press_button(self.text)
        Button:
            text: "3"
            on_release: root.press_button(self.text)
        Button:
            text: "-"
            on_release: root.press_button(self.text)

        Button:
            text: "0"
            on_release: root.press_button(self.text)
        Button:
            text: "."
            on_release: root.press_button(self.text)
        Button:
            text: "C"
            on_release: root.press_button(self.text)
        Button:
            text: "+"
            on_release: root.press_button(self.text)

        Button:
            text: "="
            font_size: 40
            on_release: root.press_button(self.text)
